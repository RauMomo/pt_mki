---
import { Breadcrumbs } from "astro-breadcrumbs";

import "astro-breadcrumbs/breadcrumbs.css";

const {title, customCrumbs, isArrow } = Astro.props;

const customBreadcrumb = title !== undefined ? [
  {index: "last", text: `${title}`},
] : []

var useArrow = isArrow === null ? false : isArrow === true ? true : false; 
---
<div>
  <Breadcrumbs customizeLinks={customBreadcrumb} indexText="Beranda" crumbs={customCrumbs} isAlternative={true}>  
    {useArrow ? <svg
      slot="separator"
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="white"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <polyline points="9 18 15 12 9 6"></polyline>
    </svg> : <div>/</div>}
  </Breadcrumbs>
</div>