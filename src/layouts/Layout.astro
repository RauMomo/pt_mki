---
import Footer from '../components/Footer.astro';
import Header from '../components/Header';


interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Manajemen Kinerja Indonesia",
  image = "../../public/images/logo_mki.png",
} = Astro.props;

var theme = {}
---

<!doctype html>
<html lang="en" class="text-black">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <title>{title}</title>
  </head>
      <body class="min-h-screen font-sans overflow-scroll">
        <Header />
        <slot />
        <Footer />
      </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap");
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --spacing-vertical-separator-breadcrumbs: 24px;
  }

  section {
    @apply p-12 mx-48
  }
  
  p{
    @apply leading-8 tracking-wide text-[16px]
  }
  html {
    font-family: system-ui, sans-serif;
    background: #ffffff;
    background-size: 224px;
  }
  h1{
    font-size: 48px;
  }

  h2{
    font-size: 30px;
    font-weight: 600;
  }

   h3{
    font-size: 26px;
    font-weight: 600;
  }

  h4{
    font-size: 22px;
    font-weight: 600;
  }

  h5{
    font-size: 18px;
    font-weight: normal;
  }

  h6{
    font-size: 40px;
    font-weight: normal;
  }

  address{
    @apply leading-8 font-normal not-italic
  }

  a{
    text-decoration: underline;
    @apply text-primary
  }
  subtitle{
    color: #A3A3A3;
  }
  code {
    font-family:
      Poppins,
      monospace;
  }

  .subtitle-alt{
    @apply text-dimGray text-sm
  }
  .li-spacing{
    @apply my-6
  }

  .circle {
  	line-height: 0;		/* remove line-height */ 
  	display: inline-block;	/* circle wraps image */
  	margin: 5px;
    border: 4px solid rgba(200,200,200,0.4);
  	border-radius: 50%;	/* relative value */
  	/*box-shadow: 0px 0px 5px rgba(0,0,0,0.4);*/
  	transition: linear 0.25s;
    height: 128px;
    width: 128px;
  }
</style>
